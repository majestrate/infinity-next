
log_format varnish '$http_x_forwarded_for - "$request" $status $body_bytes_sent "$http_referer" "$http_user_agent"';

server {

    listen 127.0.0.1:8080;
    
    root /srv/http/infinity-next/public;
    index index.php;
    server_name infinity;

    access_log on varnish;
    
    location / {
        if (!-e $request_filename ) {
            rewrite ^/(.*)$ /index.php?/$1 last;
            break;
        }
    }

    location /uploads/ {
        autoindex off;
        access_log off;
        rewrite ^/uploads/(.*) /$1;
        root /srv/http/infinity-next/storage/app/attachments/;
        break;
    }
    
    
    location ~ \.php$ {
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass unix:/var/run/php5-fpm.sock;
        fastcgi_index index.php;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
    }
}
